                if (/<[a-z][\s\S]*>/i.test($("#VERSION").val())) {
                    $("#VERSION").focus();
                    $("#VERSION_HTML").show();
                    return false;
                } else {
                    $("#VERSION_HTML").hide();
                }
            }
            return true;
        });
