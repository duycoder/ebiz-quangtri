                                                <span class="error mes-note-error"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <label>@(Model.ListThuocTinhBO[i + 1].TEN_THUOCTINH): </label>
                                        </div>
                                        <div class="col-sm-4">
                                            @(Model.ListThuocTinhBO[i + 1].GIATRI)
                                            <div class="note-error">
                                                <span class="error mes-note-error"></span>
                                            </div>
                                        </div>
                                    </div>
                                }
