                                if (i + 1 < size)
                                {
                                    <div class="form-group">
                                        <div class="col-sm-2">
                                            <label>@(Model.ListThuocTinhBO[i].TEN_THUOCTINH): </label>
                                        </div>
                                        <div class="col-sm-4">
                                            @(Model.ListThuocTinhBO[i].GIATRI)
