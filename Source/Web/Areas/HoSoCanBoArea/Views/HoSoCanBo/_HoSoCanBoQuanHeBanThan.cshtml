                            <span xml:space="preserve" class="pt-000007" id="QUEQUAN_@item.ID">
                                @item.QUEQUAN
                            </span>
                            <a href="javascript:editCanBoQuanHeBanThanRow(@item.ID)">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="javascript:removeQuanHeBanThanRow(@item.ID)">
                                <i class="fa fa-remove"></i>
                            </a>
                        </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
