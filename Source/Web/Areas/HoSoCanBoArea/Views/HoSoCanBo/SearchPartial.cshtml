@using Business.CommonBusiness
@using Web.FwCore;
<style>
    .row-block {
        margin: 5px 0px;
    }

    .txt-label {
        padding-top: 7px;
    }

    .width100 {
        width: 100% !important;
    }
</style>
<div id="collapseDiv" class="panel-collapse collapse" aria-expanded="false" role="tabpanel">
    <div class="well">

        @using (Ajax.BeginForm("searchData", "hosocanbo",
            new AjaxOptions()
        {
            HttpMethod = "POST",
            OnFailure = "failure",
            OnSuccess = "searchSuccess",
        }, new { }))
        {
            @Html.AntiForgeryToken()
            <div class="row row-block">
                <div class="col-md-6 row-block">

                    <div class="col-md-4 txt-label">Họ Tên</div>
                    <div class="col-md-8">
                        <input class="form-control width100" type="text" name="HOTEN" />
                    </div>

                </div>
                <div class="col-md-6 row-block">

                    <div class="col-md-4 txt-label">Mã Ngạch/ Bậc</div>
                    <div class="col-md-8">
                        <input class="form-control width100" type="text" name="MANGACH_BAC" />
                    </div>

                </div>
                <div class="col-md-6 row-block">

                    <div class="col-md-4 txt-label">Chức Vụ</div>
                    <div class="col-md-8">
                        <input class="form-control width100" type="text" name="STRCHUCVU" />
                    </div>

                </div>
                <div class="col-md-6 row-block">

                    <div class="col-md-4 txt-label">Tên Đăng Nhập</div>
                    <div class="col-md-8">
                        <input class="form-control width100" type="text" name="TENDANGNHAP" />
                    </div>

                </div>

                <div class="col-md-12 center" style=" margin-top:20px;">
                    <button id="btnSearch" type="submit" class="btn btn-labeled btn-primary">
                        <span class="btn-label">
                            <i class="glyphicon glyphicon-search"></i>
                        </span>
                        Tìm kiếm
                    </button>

                    <a aria-expanded="false" href="#collapseDiv" data-toggle="collapse" role="button" class="btn btn-labeled btn-danger">
                        <span class="btn-label"><i class="glyphicon glyphicon-remove"></i></span>
                        Đóng
                    </a>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function searchSuccess(rs) {
        $("#tbl-hscanbo").hinetTable("data", {
            pageIndex: 1,
            pagecount: rs.TotalPage,
            recordCount: rs.Count,
            listItem: rs.ListItem,
        });
    }

    function pagefunctionSearch() {
        $(".txt-select2").select2();

        $(".txt-picker").datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true, yearRange: "-50:+20",
            showWeek: false, weekHeader: "Tuần",
            language: 'vi',
            prevText: '<i class="fa fa-chevron-left"></i>',
            nextText: '<i class="fa fa-chevron-right"></i>',
            onSelect: function (date) {

            }
        });

        $(".txt-number").autoNumeric({ vMin: 0, mDec: 0 });
    }
    $(document).ready(function () {
        loadScript("/Scripts/autoNumeric.min.js", function () {
            loadScript("/js/plugin/select2/select2.min.js", function () {
                loadScript("/Scripts/jquery.unobtrusive-ajax.min.js", pagefunctionSearch)
            });
        });
    })
</script>
