    function DeleteFunction(id) {

        $.confirm({
            'title': 'Xác nhận xóa',
            'message': 'Bạn có chắc chắn muốn xóa vai trò này?',
            'buttons': {
                'Đồng ý': {
                    'class': 'btn-confirm-yes btn-primary',
                    'action': function () {

                        $.ajax({
                            url: '/dmvaitroarea/dmvaitro/delete',
                            data: { 'id': id },
                            type: 'post',
                            success: function (rs) {
                                if (rs.Status) {
                                    NotiSuccess("Xóa vai trò thành công");
                                    reloadData();
                                } else {
                                    NotiError(rs.Message);
                                }
                            },
