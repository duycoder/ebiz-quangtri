            }
            },

            {
                tdClass: "center",
                isSort: true,
                nameModel: 'TEN_LINHVUC',
                content: function (data) {
                    return data.TEN_LINHVUC;
                }
            },
            {
            tdClass: "center",
                isSort: true,
            nameModel: 'TEN_DOKHAN',
            content: function (data) {
                if (data.ICON_DOKHAN != null && data.ICON_DOKHAN != "") {
