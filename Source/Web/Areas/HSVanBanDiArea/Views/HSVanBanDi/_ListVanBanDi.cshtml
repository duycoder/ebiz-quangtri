                        return "<a href='/HSVanBanDiArea/HSVanBanDi/DetailVanBan?id=" + data.ID + "&type=@Model.docType' title = 'Chi tiết'>" + data.SOHIEU + "</a>";

                    }
                },
                {
                    isSort:true,
                    nameModel:'SOTHEOSO',
                    content: function (data) {
                        return data.SOTHEOSO

                    }
                },
