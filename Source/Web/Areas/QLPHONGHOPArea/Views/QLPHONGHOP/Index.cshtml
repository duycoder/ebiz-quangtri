@using Business.CommonModel.QLPHONGHOP;
@using Web.Areas.QLPHONGHOPArea.Models;
@using Business.CommonModel.CONSTANT;
@model LichHopViewModel
@{
    ViewBag.Title = "Quản lý lịch đặt phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
    #ribbon {
        background-color: #57889c
    }

        #ribbon .btn-calendar-function {
            margin: 0 5px;
        }

    #content .jarviswidget > header {
        height: auto;
        overflow: hidden;
    }

    #btn--group-calendar-type, #btn--group-send-calendar-email {
        float: right;
        margin: 5px 10px;
    }

    #btn--select-group {
        width: 250px;
        float: right;
    }

    #content .jarviswidget {
        margin: 0 0 10px 0;
    }

    #block--list-calendars .well {
        padding: 0 20px 20px 20px;
    }

    .calendar--table--data,
    .calendar--table--data-week,
    .calendar--table--data-day {
        border: 1px solid #118ACB;
    }

        .calendar--table--data thead tr th,
        .calendar--table--data-week thead tr th,
        .calendar--table--data-day thead tr th {
            background-color: #118ACB;
            border: 1px solid #118ACB;
            text-transform: uppercase;
            color: #fff;
            text-align: center;
            height: 50px;
            padding: 0;
        }

        .calendar--table--data .calendar--cell--highlight,
        .calendar--table--data-week .calendar--cell--highlight,
        .calendar--table--data-day .calendar--cell--highlight {
            background-color: #ffeaa7;
        }

        .calendar--table--data .calendar--cell--content,
        .calendar--table--data .calendar--cell--empty,
        .calendar--table--data-week .calendar--cell--content,
        .calendar--table--data-week .calendar--cell--empty {
            overflow: hidden;
        }

    .calendar--cell--data {
        min-height: 55px;
        position: relative;
        margin:5px 0;
    }

    .calendar--cel--data-important {
        background: #b50101;
        color: white;
        border-radius: 4px;
    }

    .calendar--table--data tbody tr td,
    .calendar--table--data-week tbody tr td,
    .calendar--table--data-day tbody tr td {
        border: 1px solid #118ACB;
    }


    /*THÁNG*/
    .calendar--table--data thead tr th {
        width: 100px;
        line-height: 50px;
    }

    .calendar--table--data tbody tr td {
        height: 100px;
    }


    .calendar--cell--date {
        text-align: right;
        font-weight: bold;
        font-size: 16px;
        color: #118ACB;
    }

    .calendar--table--data .calendar--cell--data {
        text-indent: 10px;
    }

    .calendar--cell--hour {
        font-size: 14px;
        font-weight: bold;
        text-decoration: underline;
    }

    .calendar--cell--title {
    }

    .calendar--cell--car-registration-alert {
        color: #118ACB;
        font-weight: bold;
        font-size: 12px;
    }

    .calendar--cell--data:hover > .calendar--cell--editor {
        z-index: 1;
        cursor: pointer;
    }

    .calendar--cell--editor {
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: -1;
        background: rgba(17, 138, 203, 0.7);
        text-align: center;
        border-radius: 5px;
    }

        .calendar--cell--editor i {
            color: #fff;
            line-height: 0.4em;
            font-size: 1.4em;
        }

        .calendar--cell--editor .btn-group {
            position: absolute;
            top: 40%;
            left: 0;
            right: 0;
        }

    .calendar--cell--add-new {
        position: absolute;
        display: none;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 5px;
        background: rgba(17, 138, 203, 0.7);
        text-align: center;
    }

        .calendar--cell--add-new .btn-group a {
            color: #fff;
        }

    .calendar--table--data .calendar--cell--content,
    .calendar--table--data .calendar--cell--empty{
        height: 145px;
    }

    .calendar--table--data .calendar--cell--empty {
        line-height: 145px;
    }

    .calendar--cell--empty {
        position: relative;
    }

        .calendar--cell--empty:hover > .calendar--cell--add-new {
            display: block;
        }

    .calendar--cell--extend, .calendar--cell--add {
        height: 20px;
        display: block;
        color: #118ACB;
        text-align: left;
        width: 48% !important;
    }

    .calendar--cell--extend {
        float: right;
    }

    .calendar--cell--add {
        float: left;
    }

    .calendar--cell--extend:hover,
    .calendar--cell--ad:hover {
        text-decoration: underline;
    }

    /*TUẦN*/
    .calendar--table--data-week tbody td:first-child {
        width: 100px;
        text-align: center;
        font-weight: bold;
        font-size: 16px;
        color: #118ACB;
    }

    .calendar--table--data-week tr th:not(:first-child) {
        width: 200px;
    }

    .calendar--table--data-week .calendar--cell--content {
        height: 120px;
    }

    .calendar--table--data-week .calendar--cell--empty {
        height: 40px;
    }

    .calendar--table--data-week .calendar--cell--empty {
        line-height: 40px;
    }

    /*NGÀY*/
    .calendar--table--data-day thead tr th {
        line-height: 50px;
    }

        .calendar--table--data-day thead tr th:first-child {
            width: 100px;
        }

    .calendar--table--data-day tr td:not(:first-child) {
        width: 200px;
    }

    .calendar--table--data-day tr td:nth-child(2) {
        width: 200px !important;
    }

    .calendar--table--data-day .calendar--cell--time-title {
        text-align: left;
        font-size: 16px;
        color: #000;
    }

    .calendar--table--data-day tbody tr td:first-child,
    .calendar--table--data-day tbody tr td:last-child {
        text-align: center;
        font-weight: bold;
    }

    .calendar--table--data-day tbody tr td:first-child {
        font-size: 16px;
    }

    .calendar--table--data-day tbody tr td:last-child {
        font-size: 14px;
    }

    .calendar--table--data-day tbody tr td:first-child {
        color: #118ACB;
    }

    .calendar--table--data-day .btn-group .fa-search {
        line-height: 0.4em;
        font-size: 1.4em;
    }

    .calendar--table--data-day .btn-group .fa-pencil-square {
        color: #dfb56c;
        font-size: 1.5em;
        line-height: 0.5em;
    }

    .calendar--table--data-day .btn-group .glyphicon-remove {
        color: red
    }

    .ui-autocomplete {
        z-index: 5000 !important;
    }

    .modal-dialog .modal-body {
        max-height: 550px !important;
    }

    .info--has-booked {
        color: #118ACB 
    }

    .calendar--cel--data-important .info--has-booked {
        color: #fff;
    }
</style>


<div id="ribbon">
    <div class="col-md-6 col-sm-6">
        <ol class="breadcrumb"></ol>
    </div>

    <div class="col-md-6 col-sm-6">
        <a class="btn btn-default pull-right btn-calendar-function" id="btn--add-calendar">
            <i class="fa fa-plus"></i><span>&nbsp;Thêm mới</span>
        </a>
    </div>
</div>

<div id="content">
    <div class="widget-t-body no-padding">
        <div class="jarviswidget">
            <header role="heading">
                <span class="widget-icon">
                    <i class="fas fa-calendar txt-color-darken"></i>
                </span>

                <h2 class="group-tittle mt10">
                    Quản lý lịch họp
                </h2>

                <div class="btn-group" role="group" aria-label="Calendar Type" id="btn--group-calendar-type">
                    <button type="button" data-calendar-type="@LICH_CONSTANT.THANG" class="btn @(Model.calendarType == LICH_CONSTANT.THANG ? "btn-primary": "btn-default")">
                        <i class="fas fa-calendar"></i>&nbsp;Tháng
                    </button>
                    <button type="button" data-calendar-type="@LICH_CONSTANT.TUAN" class="btn @(Model.calendarType == LICH_CONSTANT.TUAN ? "btn-primary": "btn-default")">
                        <i class="fas fa-table"></i>&nbsp;Tuần
                    </button>
                    <button type="button" data-calendar-type="@LICH_CONSTANT.NGAY" class="btn @(Model.calendarType == LICH_CONSTANT.NGAY ? "btn-primary": "btn-default")">
                        <i class="fas fa-bars"></i>&nbsp;Ngày
                    </button>
                </div>

                <input type="hidden" id="CALENDAR_TYPE" value="@Model.calendarType" />
                <div class="btn-group" id="btn--select-group">
                    @Html.DropDownList("select--leader", Model.groupOfLeaders, "--- Chọn lãnh đạo ---", new { @class = "txt-select2", @style = "width:100%" })
                </div>
            </header>
        </div>
    </div>

    <div id="block--list--calendars">
        @{Html.RenderAction("SearchLichDatPhong", new { searchModel = new QLPHONGHOP_SEARCH() { calendarType = Model.calendarType } });}
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modal--edit--booking"></div>
<div class="modal fade" tabindex="-1" role="dialog" id="modal--detail--booking"></div>

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>
    $(document).ajaxStart(function () {
        $(".loading-ajax").html("Đang xử lý");
        $(".loading-ajax").show();
    });
    $(document).ajaxStop(function () {
        $(".loading-ajax").hide();
    });

    $(function(){
        loadScript("/js/plugin/select2/select2.min.js", function(){
            $('.txt-select2').select2();
        });

        $('#btn--group-calendar-type .btn').on('click',function(){
            var calendarType = $(this).data('calendar-type');
            $('#CALENDAR_TYPE').val(calendarType);
            $('#btn--group-calendar-type .btn').removeClass('btn-primary').addClass('btn-default');
            $(this).addClass('btn-primary');

            var searchModel = {
                calendarType: calendarType,
                calendarDay: new Date(),
                queryUserId: $('#select--leader').val() != '' ? parseInt($('#select--leader').val()) : null
            }
            search(searchModel);
        });

        $('#select--leader').on('change',function(){
            searchLich();
        })

        $('#btn--add-calendar').on('click',function(){
            create(@DateTime.Now.Year, @DateTime.Now.Month, @DateTime.Now.Day, @DateTime.Now.Hour);
        })
    })

    function searchLich(){
         var leaderId = $('#select--leader').val() != '' ? parseInt($('#select--leader').val()) : null;
            var calendarType = parseInt($('#CALENDAR_TYPE').val());
            if(calendarType == parseInt('@LICH_CONSTANT.NGAY')){
                searchLichByDay();
            }else if(calendarType == parseInt('@LICH_CONSTANT.TUAN')){
                searchLichByWeek();
            }else{
                searchLichByMonth();
            }
    }

    function search(searchModel){
            $.ajax({
                url: '/QLPHONGHOPArea/QLPHONGHOP/SearchLichDatPhong',
                type: 'post',
                dataType : "html",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(searchModel),
                success: function (result) {
                    $('#block--list--calendars').html(result);
                }, error: function (result) {
                    NotiError('Có lỗi xảy ra');
                }
            })
        }

    function edit(id){
        var obj = {
            ID : id
        }
        $.ajax({
                url: '/QLPHONGHOPArea/QLPHONGHOP/EditFastRoomRequest',
                type: 'post',
                dataType : "html",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(obj),
                success: function (result) {
                    $('#modal--edit--booking').html(result);
                    $('#modal--edit--booking').modal('show');
                }, error: function (result) {
                    NotiError('Có lỗi xảy ra');
                }
        })
    }

    function create(year, month, day, hour){
        var obj = {
            ID : 0,
            NGAYDAT: year + '-' + month + '-' + day,
            GIOBATDAU: (hour != null && isNaN(hour) == false) ? hour : 0
        }

        console.log(obj);

        $.ajax({
                url: '/QLPHONGHOPArea/QLPHONGHOP/EditFastRoomRequest',
                type: 'post',
                dataType : "html",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(obj),
                success: function (result) {
                    $('#modal--edit--booking').html(result);
                    $('#modal--edit--booking').modal('show');
                }, error: function (result) {
                    NotiError('Có lỗi xảy ra');
                }
        })
    }

    function failEditRoomRequest(){
    }

    function successEditRoomRequest(rs){
        if(rs.Status){
            NotiSuccess(rs.Message);
            $('#modal--edit--booking').modal('hide');
            searchLich();
        }else{
            NotiError(rs.Message);
        }
    }

    function showInfo(id){
        $.get('/QLPHONGHOPArea/QLPHONGHOP/DetailBooking?id='+id, function(result){
            $('#modal--detail--booking').html(result);
            $('#modal--detail--booking').modal('show');
        });
    }


    function deleteCalendar(id){
        $.confirm({
                'title': 'Xác nhận xóa',
                'message': 'Bạn có chắc chắn muốn xóa lịch họp này?',
                'buttons': {
                    'Đồng ý': {
                        'class': 'btn-confirm-yes btn-primary',
                        'action': function () {
                            $.ajax({
                                url: '@Url.Action("DeleteLichHop")',
                                data: { 'id': id },
                                type: 'post',
                                success: function (rs) {
                                    if (rs.Status) {
                                        NotiSuccess('Xóa lịch họp thành công');
                                        searchLich();
                                    } else {
                                        NotiError(rs.Message);
                                    }
                                },
                                error: function () {
                                    NotiError("Không thực hiện được thao tác");
                                }
                            });
                        }
                    },
                    'Hủy bỏ': {
                        'class': 'btn-default',
                        'action': function () { }
                    }
                }
            });
    }
</script>