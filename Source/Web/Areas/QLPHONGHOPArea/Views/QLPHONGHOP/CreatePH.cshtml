    $("select[name=GIOBATDAU]").change(function () {
        $(".batdau .bootstrap-select button").removeClass("loigio");
        $(".loidatgio").removeClass('hienthi').html("");
    });

    function onSubmit() {
        var err = 0;
        var hourStart = parseInt($("select[name=GIOBATDAU]").val());
        var MiStart = parseInt($("select[name=PHUTBATDAU]").val());
        var MiEnd = parseInt($("select[name=PHUTKETTHUC]").val());
        var hourEnd = parseInt($("select[name=GIOKETTHUC]").val());
        if (hourStart == hourEnd) {
            if (MiStart >= MiEnd) {
                $(".batdau .bootstrap-select button").addClass('loigio');
                $(".loidatgio").addClass("hienthi").html("Giờ Bắt đầu phải nhỏ hơn Giờ Kết thúc");
                NotiError("Giờ Bắt đầu phải nhỏ hơn Giờ Kết thúc. Vui lòng kiểm tra lại");
                return false;
            }
        }
        if (hourEnd < hourStart) {
            $(".batdau .bootstrap-select button").addClass('loigio');
            $(".loidatgio").addClass("hienthi").html("Giờ Bắt đầu phải nhỏ hơn Giờ Kết thúc");
            NotiError("Giờ Bắt đầu phải nhỏ hơn Giờ Kết thúc. Vui lòng kiểm tra lại");
            return false;
        }
        var require = requiredFieldForFormId("formQlphonghop");
        if (!require) {
            err++;
        }
        var requireDropdownlist = RequireDropDownlist("formQlphonghop");
        if (!requireDropdownlist) {
            err++;
        }

        if (err == 0) {
            return true;
        } else {
            NotiError("Có lỗi. Vui lòng kiểm tra lại");
            return false;
        }
    }

    function EditDatPhong(id) {
        AjaxCall("/QLPHONGHOPArea/QLPHONGHOP/EditPhong/" + id, 'get', null, function (rs) {
