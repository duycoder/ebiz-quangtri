                    "TPThamDu": $("#TPTHAMDU").val(),
                    "MucDich": $("#MUCDICH").val()
                },
                success: function (data) {
                    if (data.Status == true) {
                        $.confirm({
                            'title': 'Xác nhận Đặt phòng',
                            'message': 'Bạn có chắc chắn muốn đặt lịch phòng này?',
                            'buttons': {
                                'Đồng ý': {
                                    'class': 'btn-confirm-yes btn-primary',
                                    'action': function () {
                                        $("#phonghop").hide();
                                        NotiSuccess("Đặt Phòng Thành công!");
