@model Business.CommonModel.SYSTINNHAN.SYS_TINNHAN_BO
<div class="modal-dialog">
    @Html.AntiForgeryToken()
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="center">
                <h4 class="modal-title">Chi tiết thông báo</h4>
            </div>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                @if (Model.ID > 0)
                {
                    <div class="form-group">
                        <label class="col-sm-2">Tiêu đề:</label>
                        <div class="col-sm-10">
                            @Model.TIEUDE
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Nội dụng:</label>
                        <div class="col-sm-10">
                            @Model.NOIDUNG
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Người gửi:</label>
                        <div class="col-sm-4">
                            @Model.TEN_NGUOIGUI
                        </div>
                        <div class="col-sm-2">Ngày gửi:</div>
                        <div class="col-sm-4">
                            @(Model.NGAYTAO.HasValue ? Model.NGAYTAO.Value.ToString("dd/MM/yyyy") : "")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Trạng thái:</label>
                        <div class="col-sm-4">
                            @if (true == Model.IS_READ)
                            {
                                <span class="text-success">Đã đọc</span>
                            }
                            else
                            {
                                <span class="text-success">Chưa đọc</span>
                            }
                        </div>

                    </div>
                }
                else
                {
                    <div class="form-group">
                        <span>Không tìm thấy thông báo</span>
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer center">
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</div>

