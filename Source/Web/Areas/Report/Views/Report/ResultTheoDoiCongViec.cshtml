@model string

<style>
    .table-bordered th {
        vertical-align: top !important;
        text-align: center !important;
        font-size: 14px;
        background-color: #c5d9f1 !important;
    }

    .table-bordered td:first-child {
        text-align: center
    }

    .min-width100 {
        min-width: 100px
    }

    .min-width150 {
        min-width: 100px
    }

    .min-width200 {
        min-width: 200px
    }

    .table-bordered td {
        vertical-align: top;
        text-align: left;
    }

    .job-parent {
        background-color: #75ffe7;
        font-weight: bold
    }

    .job-child {
    }
</style>
<table class="table table-bordered report-table" id="example" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th rowspan="3" class="first-child">STT</th>
            <th rowspan="3" class="min-width150 second-child">Hạng mục công việc</th>
            <th rowspan="3" class="min-width150">Nội dung chi tiết</th>
            <th rowspan="3" class="min-width150">Các bước thục hiện</th>
            <th rowspan="3" class="min-width150">Mục tiêu công việc/Sản phẩm đạt được</th>
            <th colspan="2" class="min-width150">Nhân lực thực hiện</th>
            <th colspan="2" class="min-width150">Giao nhận việc</th>
            <th colspan="13" class="min-width150">Thời gian lập kế hoạch</th>
            <th colspan="3" class="min-width150">Dự trù thời gian triển khai (theo KH)</th>
            <th colspan="15" class="min-width150">Thời gian triển khai thực tế</th>
            <th colspan="6" class="min-width150">Đánh giá hiệu quả thời gian</th>
            <th colspan="2" class="min-width150">Đánh giá kết quả triển khai công việc&nbsp;</th>
        </tr>
        <tr>
            <th rowspan="2" class="min-width100">Người thực hiện chính(R)</th>
            <th rowspan="2" class="min-width100">Người hỗ trợ</th>
            <th rowspan="2" class="min-width100">Ngày nhận việc</th>
            <th rowspan="2">Ngày hoàn thành theo mong muốn của cấp trên</th>
            <th colspan="4" class="min-width100">Trình duyệt kế hoạch lần 1</th>
            <th colspan="4" class="min-width100">Trình duyệt kế hoạch lần 2</th>
            <th colspan="4" class="min-width100">Trình duyệt kế hoạch lần 3</th>
            <th rowspan="2" class="min-width100">Ngày được phê duyệt kế hoạch</th>
            <th rowspan="2" class="min-width100">Ngày bắt đầu</th>
            <th rowspan="2" class="min-width100">Ngày hoàn thành</th>
            <th rowspan="2" class="min-width100">Số ngày triển khai theo KH</th>
            <th class="min-width100" rowspan="2">Ngày bắt đầu</th>
            <th colspan="4" class="min-width100">Trình duyệt công việc lần 1</th>
            <th colspan="4" class="min-width100">Trình duyệt công việc lần 2</th>
            <th colspan="4" class="min-width100">Trình duyệt công việc lần 3</th>
            <th rowspan="2" style="min-width:150px">Ngày hoàn thành và được phê duyệt</th>
            <th rowspan="2" style="min-width:150px">Số ngày triển khai theo thực tế</th>
            <th rowspan="2" style="min-width:200px">
                Tổng số ngày dành cho công việc (từ lúc bắt đầu lên KH/nhận việc cho đến ngày hoàn thành)
            </th>
            <th rowspan="2" style="min-width:150px">Tổng số ngày chờ cấp trên duyệt</th>
            <th rowspan="2" style="min-width:150px">Tổng số ngày cá nhân triển khai thực tế </th>
            <th rowspan="2" class="min-width100">Tổng số lần trình duyệt</th>
            <th rowspan="2" class="min-width100">Tổng số lần điểu chỉnh kế hoạch</th>
            <th rowspan="2" class="min-width100">Chênh lệch số ngày triển khai giữa KH và thực tế</th>
            <th rowspan="2">Điểm</th>
            <th rowspan="2">Xếp loại</th>
        </tr>
        <tr>
            <th class="min-width100">Ngày trình duyệt KH lần 1</th>
            <th class="min-width100">Ngày có phản hổi của cấp trên lần 1</th>
            <th class="min-width100">Số ngày chờ cấp trên phản hồi</th>
            <th class="min-width100">Kết quả trình duyệt</th>
            <th class="min-width100">Ngày trình duyệt KH lần 2</th>
            <th class="min-width100">Ngày có phản hổi của cấp trên lần 2</th>
            <th class="min-width100">Số ngày chờ cấp trên phản hồi</th>
            <th class="min-width100">Kết quả trình duyệt</th>
            <th class="min-width100">Ngày trình duyệt KH lần 3</th>
            <th class="min-width100">Ngày có phản hổi của cấp trên lần 3</th>
            <th class="min-width100">Số ngày chờ cấp trên phản hồi</th>
            <th class="min-width100">Kết quả trình duyệt</th>
            <th class="min-width100">Ngày trình duyệt kết quả công việc lần 1</th>
            <th class="min-width100">Ngày có phản hổi của cấp trên lần 1</th>
            <th class="min-width100">Số ngày chờ cấp trên phản hồi</th>
            <th class="min-width100">Kết quả trình duyệt</th>
            <th class="min-width100">Ngày trình duyệt kết quả công việc lần 2</th>
            <th class="min-width100">Ngày có phản hổi của cấp trên lần 2</th>
            <th class="min-width100">ố ngày chờ cấp trên phản hồi</th>
            <th class="min-width100">Kết quả trình duyệt</th>
            <th class="min-width100">Ngày trình duyệt kết quả công việc lần 3</th>
            <th class="min-width100">Ngày có phản hổi của cấp trên lần 3</th>
            <th class="min-width100">Số ngày chờ cấp trên phản hồi</th>
            <th class="min-width100">Kết quả trình duyệt</th>
        </tr>
    </thead>
    <tbody style="overflow:auto">
        @Html.Raw(Model)
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('.JStableOuter table').scroll(function (e) {
            $('.JStableOuter thead').css("left", -$(".JStableOuter tbody").scrollLeft());
            $('.JStableOuter thead .first-child,.JStableOuter thead .second-child').css("left", $(".JStableOuter table").scrollLeft() - 0);
            $('.JStableOuter tbody td:nth-child(1),.JStableOuter tbody td:nth-child(2)').css("left", $(".JStableOuter table").scrollLeft());
            $('.JStableOuter thead').css("top", -$(".JStableOuter tbody").scrollTop());
            $('.JStableOuter thead tr th').css("top", $(".JStableOuter table").scrollTop());
        });
    });
</script>
