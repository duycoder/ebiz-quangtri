    table th {
        text-align: center;
    }

    .hinet-table td:nth-child(4) {
        width: 25% !important;
    }

    .text-justify, .text-justify a {
        text-align: justify !important;
    }
    .fa-eye:hover{
        cursor:pointer;
    }
    .hinet-table td:nth-child(2){
        width:15%;
    }
</style>